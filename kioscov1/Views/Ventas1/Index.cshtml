@model IEnumerable<kioscov1.Models.Entities.Venta>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Ventas</h1>

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        <strong>Atención:</strong> No existe un turno abierto. Por favor, abra un turno para comenzar a vender.
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h5 class="text-muted">Listado de ventas realizadas</h5>
        </div>
        <a class="btn btn-primary btn-sm" asp-action="Create">
            ➕ Nueva Venta
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Fecha)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Importe)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TipoPago)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>$@item.Importe.ToString("N2")</td>
                        <td>@item.TipoPago.ToString()</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1" title="Ver Detalles">
                                ℹ️
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Eliminar Venta">
                                ❌
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
