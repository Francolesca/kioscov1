@model IEnumerable<kioscov1.Models.Entities.Venta>

@{
    ViewData["Title"] = "Ventas";
}

<div class="container my-4">
    <h2 class="mb-4">
        <i class="bi bi-currency-dollar me-2"></i>@ViewData["Title"]
    </h2>

    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            <strong>Atención:</strong> No existe un turno abierto. Por favor, abra un turno para comenzar a vender.
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
            <div>
                <h5 class="text-muted">Listado de ventas realizadas</h5>
            </div>
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Nueva Venta
            </a>
        </div>

        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().Id)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Fecha)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Importe)</th>
                        <th>@Html.DisplayNameFor(m => m.First().TipoPago)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>$@item.Importe.ToString("N2")</td>
                            <td>@item.TipoPago.ToString()</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1" title="Ver Detalles">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar Venta">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
