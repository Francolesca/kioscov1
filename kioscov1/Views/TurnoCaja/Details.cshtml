@model kioscov1.Models.Entities.TurnoCaja
@{
    ViewData["Title"] = "Detalle Ventas de Turno";
}

<div class="container my-4">
    <h2 class="mb-4">
        <i class="bi bi-clock-history me-2"></i>@ViewData["Title"]
    </h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Apertura)</dt>
                <dd class="col-sm-9">@Model.Apertura.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.Cierre)</dt>
                <dd class="col-sm-9">@Model.Cierre?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.MontoInicial)</dt>
                <dd class="col-sm-9">$@Model.MontoInicial.ToString("N2")</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.MontoTransferencia)</dt>
                <dd class="col-sm-9">$@Model.MontoTransferencia?.ToString("N2") </dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.MontoFinal)</dt>
                <dd class="col-sm-9">$@Model.MontoFinal?.ToString("N2") </dd>
            </dl>
        </div>
    </div>

    @if (Model.Ventas != null && Model.Ventas.Any())
    {
        <h5 class="mb-3">Ventas Realizadas</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Horario de Venta</th>
                        <th>Importe Total</th>
                        <th>Tipo de Pago</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Ventas)
                    {
                        <tr>
                            <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>$@item.Importe.ToString("N2")</td>
                            <td>@item.TipoPago.ToString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No se registraron ventas en este turno.
        </div>
    }

    <div class="mt-4">
        <a asp-action="HistorialTurnos" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Volver al listado
        </a>
    </div>
</div>
