@model IEnumerable<kioscov1.Models.UserEntity.Rol>

@{
    ViewData["Title"] = "Lista de Roles";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="mb-3">
    <a asp-action="CreateRol" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Crear Nuevo Rol
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th style="width: 180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil-fill"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1 text-white">
                        <i class="bi bi-info-circle-fill"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash-fill"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
