@model kioscov1.ViewsModel.LoginVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Warrior</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/kioscov1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Acceso" asp-action="Login">Warrior</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
<div class="row mt-5 justify-content-center">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-header">
                Iniciar Sesion
            </div>
            <div class="card-body">

                <form asp-controller="Acceso" asp-action="Login" method="post">
                    <input class="form-control mb-3" type="text" placeholder="Nombre de usuario" asp-for="Usuario" required />
                    <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="Password" required />
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-success" type="submit">Iniciar Sesion</button>
                    </div>

                    @if (ViewData["AlertMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @ViewData["AlertMessage"]
                        </div>
                    }

                </form>

            </div>
        </div>
    </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Warrior - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>